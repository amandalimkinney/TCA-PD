<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Data_Access.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCourseServlet</servlet-name>
        <servlet-class>Data_Access.GetCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/home/doLogin.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCourseServlet</servlet-name>
        <url-pattern>/teacher/doRegister.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/teacher/addhours.jsp-submit</url-pattern>
        <url-pattern>/teacher/addhours</url-pattern>
        <url-pattern>/teacher/viewcourselist</url-pattern>
        <url-pattern>/teacher/viewcourselist-signup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/home/login.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/home/index.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>index</display-name>
        <web-resource-collection>
            <web-resource-name>index</web-resource-name>
            <description/>
            <url-pattern>/home/index.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>root</role-name>
            <role-name>admin</role-name>
            <role-name>headofschool</role-name>
            <role-name>instructor</role-name>
            <role-name>teacher</role-name>
            <role-name>default</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>teacher</display-name>
        <web-resource-collection>
            <web-resource-name>teacherPages</web-resource-name>
            <description/>
            <url-pattern>/teacher/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>teacher</role-name>
            <role-name>instructor</role-name>
            <role-name>root</role-name>
            <role-name>admin</role-name>
            <role-name>headofschool</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>instructor</display-name>
        <web-resource-collection>
            <web-resource-name>instructor</web-resource-name>
            <description/>
            <url-pattern>/instructor/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>instructor</role-name>
            <role-name>admin</role-name>
            <role-name>root</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>admin</display-name>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>root</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>TCAJDBC</realm-name>
        <form-login-config>
            <form-login-page>/home/login.jsp</form-login-page>
            <form-error-page>/home/loginerror.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>root</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>headofschool</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>instructor</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>teacher</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>default</role-name>
    </security-role>
</web-app>
